---
import { fade } from "astro:transitions";
import Nav from "../components/Nav.astro";
import BaseHead from "../components/Head/BaseHead.astro";
import Footer from "../components/Footer/Footer.astro";
import VoxStyleEvent from "../components/VoxStyleEvent";
import { ViewTransitions } from "astro:transitions";

// For Astro markdown files, frontmatter is directly on Astro.props
const { 
  title, 
  description, 
  eventDate, 
  endDate,
  location, 
  venue, 
  address, 
  city, 
  country, 
  price, 
  organizer, 
  organizerEmail,
  languageLevel, 
  tags,
  registrationUrl 
} = Astro.props;
---

<html lang="ga">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body class="bg-white text-gray-900 min-h-screen font-body leading-normal">
    <Nav />

    <main>
      <!-- Vox-style Event Hero -->
      <VoxStyleEvent 
        title={title}
        description={description}
        eventDate={eventDate}
        endDate={endDate}
        location={location}
        venue={venue}
        address={address}
        city={city}
        country={country}
        price={price}
        organizer={organizer}
        organizerEmail={organizerEmail}
        languageLevel={languageLevel}
        tags={tags}
        registrationUrl={registrationUrl}
        client:load
      />

      <!-- Event Content Section -->
      <!-- <div class="bg-gray-50 py-20">
        <div class="max-w-4xl mx-auto px-8">
          <div class="bg-white p-12 shadow-sm border border-gray-100">
            <div class="prose prose-lg max-w-none text-gray-700 leading-relaxed">
              
            </div>
          </div>
        </div>
      </div> -->
    </main>
    
    <Footer />
  </body>
</html>