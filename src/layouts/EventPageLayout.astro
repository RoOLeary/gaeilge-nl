---
import { fade } from "astro:transitions";
import Nav from "../components/Nav.astro";
import BaseHead from "../components/Head/BaseHead.astro";
import Footer from "../components/Footer/Footer.astro";
import { ViewTransitions } from "astro:transitions";

const formatDate = (dateString: string | Date) => {
  if (!dateString) return 'TBD';
  const date = new Date(dateString);
  if (isNaN(date.getTime())) {
    return 'TBD';
  }
  return new Intl.DateTimeFormat("en-US", {
    weekday: 'long',
    year: 'numeric',
    month: 'long',
    day: 'numeric',
    hour: '2-digit',
    minute: '2-digit',
  }).format(date);
};

// For Astro markdown files, frontmatter is directly on Astro.props
const { title, description, eventDate, location, venue, address, city, country, price, organizer, languageLevel, tags } = Astro.props;
---

<html lang="ga">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>

  <body class="bg-gray-50 text-gray-900 min-h-screen font-body leading-normal personality-casual">
    <Nav />

    <main class="py-8 lg:py-12">
      <article class="max-w-4xl mx-auto px-4">
        <!-- Hero Section -->
        <div class="bg-gradient-to-r from-green-600 to-blue-600 text-white rounded-2xl p-8 mb-8 shadow-xl">
          <div class="text-sm uppercase tracking-w-wide mb-2 opacity-90">{venue || 'TBD'}</div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{title || 'Event Title'}</h1>
          <p class="text-xl opacity-90 mb-6">{description || 'Event description'}</p>
          
          <!-- Key Info Pills -->
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-4 py-2 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path v-rule="evenodd" d="M6 2a1 1 0 0 0-1 1v1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1V3a1 1 0 0 0-1-1zM8 10a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0v-3zm4 0a1 1 0 0 1 2 0v3a1 1 0 1 1-2 0v-3zM7 4H5V3h2v1z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold">{formatDate(eventDate)}</span>
            </div>
            
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-4 py-2 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 1 1 9.9 9.9l-1.5-1.5a5.5 5.5 0 1 0-6.9-6.9l-1.5-1.5z" clip-rule="evenodd"></path>
                <path d="M16.864 15.536l-1.414 1.414L15.05 17.95a7 7 0 1 1-9.9-9.9l1-1.414 1.414 1.414L6.05 8.05a5.5 5.5 0 1 0 6.9 6.9l1.414-1.414L16.864 15.536z"></path>
              </svg>
              <span class="font-semibold">{location || city || 'Location TBD'}</span>
            </div>
            
            <div class="bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-4 py-2 flex items-center">
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2V6h10a2 2 0 0 1-2 2H6a2 2 0 0 0-2-2V4z" clip-rule="evenodd"></path>
                <path fill-rule="evenodd" d="M6 10a2 2 0 0 1-2-2H4v2h2a2 2 0 0 1-2-2zm0 4h10a2 2 0 1 0 0-4H6a2 2 0 1 0 0 4z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-semibold">{price || 'Free'}</span>
            </div>
          </div>
          
          <!-- CTA Button -->
          <div class="flex gap-4">
            <a href={`mailto:${organizer || 'info@gaeltachammsterdam.com'}`} class="bg-white text-green-600 font-bold px-6 py-3 rounded-full hover:bg-opacity-90 transition-all hover:scale-105 shadow-lg">
              Register Now
            </a>
            <a href="/imeachtaÃ­" class="border-2 border-white text-white font-semibold px-6 py-3 rounded-full hover:bg-white hover:text-green-600 transition-all">
              View All Events
            </a>
          </div>
        </div>

        <!-- Content Section -->
        <div class="grid md:grid-cols-3 gap-8">
          <!-- Main Content -->
          <div class="md:col-span-2">
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <h2 class="text-2xl font-bold mb-4">Event Details</h2>
              <div class="prose prose-lg max-w-none">
                <slot />
              </div>
            </div>
          </div>

          <!-- Sidebar -->
          <div class="space-y-6">
            <!-- Quick Info Card -->
            <div class="bg-white rounded-xl p-6 shadow-lg">
              <h3 class="font-bold text-lg mb-4">Quick Info</h3>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <svg class="w-5 h-5 mt-1 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16zm1-12a1 1 0 1 0-2 0v4a1 1 0 0 0 .293.707l2.828 2.829a1 1 0 1 1-1.415 1.415L8 12.414V6z" clip-rule="evenodd"></path>
                  </svg>
                  <div>
                    <div class="text-sm text-gray-500">Date & Time</div>
                    <div class="font-semibold">{formatDate(eventDate)}</div>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3">
                  <svg class="w-5 h-5 mt-1 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 1 1 9.9 9.9L10 18.9l-4.95-4.95a7 7 0 0 1 0-9.9zM10 11a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" clip-rule="evenodd"></path>
                  </svg>
                  <div>
                    <div class="text-sm text-gray-500">Venue</div>
                    <div class="font-semibold">{venue || 'TBD'}</div>
                    {address && <div class="text-sm text-gray-600">{address}</div>}
                    <div class="text-sm text-gray-600">{city}, {country || 'Ireland'}</div>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3">
                  <svg class="w-5 h-5 mt-1 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M2 6a2 2 0 0 1 2-2h5l2 2h5a2 2 0 0 1 2 2v6a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V6zm4.5 5.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z" clip-rule="evenodd"></path>
                  </svg>
                  <div>
                    <div class="text-sm text-gray-500">Organizer</div>
                    <div class="font-semibold">{organizer || 'Gaeltacht Amsterdam'}</div>
                  </div>
                </div>
                
                {languageLevel && (
                  <div class="flex items-start space-x-3">
                    <svg class="w-5 h-5 mt-1 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M7 2a1 1 0 0 1 1 1v1h3a1 1 0 1 1 0 2H9.578a18.87 18.87 0 0 1-1.898 7.72l-.8-1.3A8.5 8.5 0 0 1 7.25 8H4a1 1 0 1 1 0-2h3V3a1 1 0 0 1 1-1z" clip-rule="evenodd"></path>
                    </svg>
                    <div>
                      <div class="text-sm text-gray-500">Language Level</div>
                      <div class="font-semibold">{languageLevel}</div>
                    </div>
                  </div>
                )}
              </div>
            </div>

            <!-- Tags -->
            {tags && tags.length > 0 && (
              <div class="bg-white rounded-xl p-6 shadow-lg">
                <h3 class="font-bold text-lg mb-4">Tags</h3>
                <div class="flex flex-wrap gap-2">
                  {tags.map(tag => (
                    <span class="bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full font-medium">{tag}</span>
                  ))}
                </div>
              </div>
            )}
          </div>
        </div>
      </article>
    </main>
    
    <Footer />
  </body>
</html>