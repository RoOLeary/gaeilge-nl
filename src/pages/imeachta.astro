---
import BaseHead from '../components/Head/BaseHead.astro';
import Nav from '../components/Nav.astro';
import HomeHeader from '../components/HomeHeader.astro';
import Footer from '../components/Footer/Footer.astro'
import { ViewTransitions } from "astro:transitions";

const allEvents = await Astro.glob('./events/*.md');
const sortedEvents = allEvents.sort((a, b) => new Date(b.frontmatter.eventDate).valueOf() - new Date(a.frontmatter.eventDate).valueOf());

let pageTitle = 'Imeachtaí Gaeilge';
let pageDescription = `Imeachtaí Gaeilge in Amsterdam`;
let seoTitle = 'Imeachtaí Gaeilge | Gaeltacht NL';
let seoDescription = '';
---

<html lang="ga">

<head>
  <BaseHead title={seoTitle} description={seoDescription} />
  <ViewTransitions />
</head>

<body class="bg-white text-black font-body leading-normal personality-casual">
  <Nav />

  <main class="py-12 lg:py-20">
    <article class="max-w-6xl mx-auto px-3">
      <HomeHeader title={pageTitle} description={pageDescription} />
      
      <section class="space-y-6 py-8" data-test="events-section">
        {sortedEvents.map(event => 
          <div class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-xl font-bold mb-2">{event.frontmatter.title}</h3>
                <p class="text-gray-600 mb-4">{event.frontmatter.description}</p>
                <div class="space-y-2 mb-4">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6 2a1 1 0 0 0-1 1v1H4a2 2 0 0 0-2 2v10a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1V3a1 1 0 1 0-2 0v1H7V3a1 1 0 0 0-1-1zM4 7h12v9H4V7z"></path>
                    </svg>
                    <span class="text-sm">{new Date(event.frontmatter.eventDate).toLocaleDateString()}</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 2a8 8 0 1 0 0 16 8 8 0 0 0 0-16zM8 8a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"></path>
                    </svg>
                    <span class="text-sm">{event.frontmatter.location}, {event.frontmatter.city}</span>
                  </div>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 0 1-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 0 1-.567.267z"></path>
                      <path fill-rule="evenodd" d="M10 18a.8.8 0 1 0 0-16 8 8 0 0 0 0 16zm1-13a1 1 0 1 0-2 0v.092a4.535 4.535 0 0 0-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 1 0-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 1 0 2 0v-.092a4.535 4.535 0 0 0 1.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0 0 11 9.092V7.151c.391.127.68.317.843.504a1 1 0 1 0 1.51-1.31c-.562-.649-1.413-1.076-2.353-1.253V5z" clip-rule="evenodd"></path>
                    </svg>
                    <span class="text-sm font-semibold">{event.frontmatter.price}</span>
                  </div>
                </div>
              </div>
              <div class="ml-4">
                <a href={event.url} class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
                  View Details
                </a>
              </div>
            </div>
          </div>
        )}
      </section>
    </article>
  </main>
  
  <Footer />
</body>

</html>
